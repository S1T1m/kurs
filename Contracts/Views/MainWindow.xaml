<Window x:Class="Contracts.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:v="clr-namespace:Contracts.Views"
        xmlns:vl="clr-namespace:Contracts.Views.lookups"
        xmlns:vc="clr-namespace:Contracts.Views.contracts"
        Title="Contracts DB" Width="1280" Height="800">
  <Grid>
    <TabControl>
      <TabItem Header="Договоры">
        <vc:ContractsView DataContext="{Binding Contracts}"/>
      </TabItem>
      <TabItem Header="Справочники">
        <TabControl>
          <TabItem Header="Организации"><vl:OrganizationsView DataContext="{Binding Organizations}"/></TabItem>
          <TabItem Header="Типы договоров"><vl:SimpleNameLookupView Tag="contract_types/type_id"/></TabItem>
          <TabItem Header="Стадии"><vl:SimpleNameLookupView Tag="stages/stage_id"/></TabItem>
          <TabItem Header="Виды оплат"><vl:SimpleNameLookupView Tag="payment_types/payment_type_id"/></TabItem>
          <TabItem Header="Ставки НДС"><vl:VatRatesView DataContext="{Binding VatRates}"/></TabItem>
        </TabControl>
      </TabItem>
      <TabItem Header="Отчеты">
        <v:ReportsView DataContext="{Binding Reports}"/>
      </TabItem>
    </TabControl>
  </Grid>
</Window>
