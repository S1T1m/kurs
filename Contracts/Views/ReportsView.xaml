<UserControl x:Class="Contracts.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Выбрать отчёт:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <ComboBox Width="260"
                      ItemsSource="{Binding ReportsList}"
                      SelectedValuePath="Key"
                      DisplayMemberPath="Value"
                      SelectedValue="{Binding SelectedReport}"
                      Margin="0,0,12,0"/>
            <TextBlock Text="C:" VerticalAlignment="Center" Margin="0,0,4,0"/>
            <DatePicker Width="140" SelectedDate="{Binding DateFrom}" Margin="0,0,12,0"/>
            <TextBlock Text="по:" VerticalAlignment="Center" Margin="0,0,4,0"/>
            <DatePicker Width="140" SelectedDate="{Binding DateTo}" Margin="0,0,12,0"/>
            <Button Content="Сформировать" Width="140" Command="{Binding LoadReportCmd}"/>
        </StackPanel>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding ReportView}"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  AlternatingRowBackground="#f7f7f7"
                  GridLinesVisibility="Horizontal"/>

        <TextBlock Grid.Row="2" Margin="0,8,0,0"
                   FontWeight="Bold"
                   Text="{Binding SummaryText}"/>
    </Grid>
</UserControl>